## terraform

snippet #
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.27"
    }
  }

  required_version = ">= 0.14.9"
}

provider "aws" {
  profile = "default"
  region  = "eu-west-2"
}
endsnippet

snippet ec2
resource "aws_instance" "${1:name}" {
  ami           = "$2"
  instance_type = "$3"
}
endsnippet

snippet out
output "${1:resource_id}" {
  description = "$2"
  value       = ${3:obj.property}
}
endsnippet
